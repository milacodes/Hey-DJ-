<h1>Welcome to the Music Club</h1>
<br>

<h3>Log In Here</h3>
<form action = "/login" method = "post">
	<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">
	<p>Email: <input type = "email" name = "email" placeholder = "email here"></p>
	<p>Password: <input type = "password" name = "password" placeholder = "password here"></p>
	<input type = "submit" value = "Log In">
</form>

<br>
<h3>Register Here</h3>
<form action = "/register" method = "post">
	<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">
	<p>Name: <input type = "text" name = "user[name]" placeholder = "name here"></p>
	<p>Email: <input type = "email" name = "user[email]" placeholder = "email here"></p>
	<p>Password: <input type = "password" name = "user[password]" placeholder = "password here"></p>
	<p>Password confirmation: <input type = "password" name = "password_confirmation" placeholder = "confirm password"></p>
	<input type = "submit" value = "Sign Up">

</form>

<% if flash[:errors] %>
	<p> <%= flash[:errors] %> </p>
<% end %>