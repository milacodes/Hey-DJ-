<div class = "row">
	<div class = "small-12 columns">
		<a class = "button small left atext" href="/songs">Back To All Songs</a>
		<a class = "button small right atext" href="/logout">Log Out</a>
	</div>
</div>

<div class = "row text-center">
	<div class = "row">
		<div class = "small-12 columns">
			<h2 class = "section_title"><%= @user.name %>'s Playlist</h2>
		</div>
	</div>	
	<div class = "row">
		<div class = "small-12 columns">
			<table align = "center">
				<thead>
					<tr>
						<th>Artist</th>
						<th>Title</th>
						<th>Times Added</th>
					</tr>
				</thead>
				<tbody>
					<% @adds.each do |a| %>
					<tr>
						<td><%= a.artist %></td>
						<td><%= a.title %></td>
						<td><%= @songs.where(user_id:@user.id, song_id:a.id).count %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>		
	</div>
</div>		
